<div class="homepage-section">
    <h1>HOMEPAGE</h1>
    <div>
        {{#each posts as |post|}}
        <div class="post-card">
            <div class="post-header" >
                <h3>{{post.title}}</h3>
                <p>{{user.username}}</p>
            </div>
            <p>
                {{post.content}}
            </p>
            <div>
                <a href="/api/posts/{{post.id}}">view details</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>