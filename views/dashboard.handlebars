    <div class="dashboard-section">
    <h1>Welcome {{username}}</h1>
    <section>
        <h3>Add new post</h3>
        <div>
            <form class="new-post">
                <input type="text" id="new-post-title" placeholder="Post Title">
                <input type="text" id="new-post-content" placeholder="Post Content">
                <button type="submit" id="post-button">Submit</button>
            </form>
        </div>
    </section>
    <section>
        <h3>Your Posts:</h3>
        {{#if posts.length}}
        <div>
            {{#each posts as |post|}}
            <div>
                <h4>{{post.title}}</h4>
                <p>{{post.content}}</p>
            </div>
            {{/each}}
        </div>
        {{else}}
        <p>You havent created a post yet</p>
    </section>
    {{/if}}
    </div>


    <script src="./js/dashboard.js"></script>